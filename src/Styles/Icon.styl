setRotation(rotation)
  -ms-transform rotate(rotation)
  -webkit-transform rotate(rotation)
  transform rotate(rotation)


span.icon
  position relative
  display inline-block
  width 7em
  height 7em
  background transparent
  padding $xs
  &[orientation = 'up']
    setRotation(180deg)
  &[orientation = 'left']
    setRotation(90deg)
  &[orientation = 'right']
    setRotation(270deg)

  &.button
    cursor pointer

  img
    background-color white
    width 100%

  .icon
    width 5em
    height 5em
    margin 1em

    img
      width 100%

