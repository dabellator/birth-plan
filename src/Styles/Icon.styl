setRotation(rotation)
  -ms-transform rotate(rotation)
  -webkit-transform rotate(rotation)
  transform rotate(rotation)

.iconDataList
  clear left

.icon
  float left
  width 5em
  margin 2em

  img
    width 100%

span.icon
  position relative
  display inline-block
  width 15%
  background transparent
  padding $xl
  &[orientation = 'up']
    setRotation(180deg)
  &[orientation = 'left']
    setRotation(90deg)
  &[orientation = 'right']
    setRotation(270deg)

  &.button
    cursor pointer

  img
    background-color white
    width 100%

  .icon
    width 5em
    height 5em
    margin 1em

    img
      width 100%

