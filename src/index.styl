@require 'Styles/Theme.styl'
@require 'Styles/*'

@font-face
   font-family Ubuntu
   src url(Assets/UbuntuTitling-Bold-webfont.woff)

html, body, #root, .app
  padding 0
  margin 0
  box-sizing border-box
  overflow-x hidden
  overflow-y auto
  background-color $white
  font-family Ubuntu, 'sans-serif'
  color $main-font
  height 100vh

  *
    box-sizing border-box
    font-family Ubuntu, 'sans-serif'

h1,
h2,
h3,
h4,
h5,
h6
  margin-top .4em
  margin-bottom .4em
  padding 0px
